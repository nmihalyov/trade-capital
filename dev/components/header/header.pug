include ../_ui/button/button

mixin header
  header.header.container
    .wrapper
      .header__menu
        .header__logo
          include assets/logo.svg
        nav.header__nav
          a.header__link.header__link--current.js-scrollto(href="#", data-scroll="page-wrapper") Главная
          a.header__link.js-scrollto(href="#", data-scroll="why") Почему робот?
          a.header__link.js-scrollto(href="#", data-scroll="about") О нас
          a.header__link.js-scrollto(href="#", data-scroll="faq") FAQ
        +button-outline('Войти в кабинет', '//trade-capital.pro/login', 'header__btn')
        .header__burger
          span
          span
          span
  .header__mobile
    nav.header__nav
      a.header__link.header__link--current.js-scrollto(href="#", data-scroll="hero") Главная
      a.header__link.js-scrollto(href="#", data-scroll="why") Почему робот?
      a.header__link.js-scrollto(href="#", data-scroll="about") О нас
      a.header__link.js-scrollto(href="#", data-scroll="faq") FAQ
    +button-outline('Войти в кабинет', '//trade-capital.pro/login', 'header__btn')
