mixin video(id, className)
  .video(class=className)
    .video__cover.js-play-video(style=`background-image: url(https://img.youtube.com/vi/${id}/maxresdefault.jpg)`)
      .video__play
        include assets/play-icon.svg
    iframe(width="570", height="285", src=`https://www.youtube.com/embed/${id}`, frameborder="0", allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture", allowfullscreen)